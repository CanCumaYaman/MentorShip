
@{
    ViewData["Title"] = "PasswordReset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    
        <div class="container">
            <form class="modal-content animate" action="/Register/Update/" method="post">
                <input type="email" id="mail" value="@ViewBag.message" name="Email" class="form-control" style="margin-bottom:5px; width:400px;" />
                <input type="password" id="password" placeholder="Yeni Şifreniz" class="form-control" name="Parola" style="margin-bottom:5px;width:400px;position:relative;" />
                <input type="text" id="text" placeholder="Yeni Şifreniz" class="form-control" name="Parola" style="margin-bottom:5px;width:400px;position:relative;display:none;" />
                <span style="position:absolute;left:375px;top:31px;" id="eyes"><i class="fas fa-eye fa-1x"></i></span>
                <span style="position:absolute;left:375px;top:31px;display:none;" id="clos-eyes"><i class="fas fa-eye-slash"></i></span>
                <input type="submit" value="Güncelle" class="form-control btn btn-success" style="margin-bottom:5px;width:200px;" />
            </form>

        </div>
    



